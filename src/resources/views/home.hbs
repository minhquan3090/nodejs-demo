
<div
  id='carouselExampleIndicators'
  class='carousel slide mt-4'
  data-ride='carousel'
>
  <ol class='carousel-indicators'>
    <li
      data-target='#carouselExampleIndicators'
      data-slide-to='0'
      class='active'
    ></li>
    <li data-target='#carouselExampleIndicators' data-slide-to='1'></li>
    <li data-target='#carouselExampleIndicators' data-slide-to='2'></li>
  </ol>
  <div class='carousel-inner'>
    <div class='carousel-item active'>
      <img
        class='d-block'
        src='https://files.fullstack.edu.vn/f8-prod/banners/20/6308a6bf603a4.png'
        style='background-color: linear-gradient(
    90deg,
    rgb(181, 180, 194) 0%,
    rgb(80, 80, 122) 35%,
    rgba(0, 212, 255, 1) 100%
  ); width:1200px; height:250px'
        alt='First slide'
      />
    </div>
    <div class='carousel-item'>
      <img
        class='d-block'
        src='https://files.fullstack.edu.vn/f8-prod/banners/Banner_04_2.png'
        style='background-color: blue; width:1200px; height:250px'
        alt='Second slide'
      />
    </div>
    <div class='carousel-item'>
      <img
        class='d-block'
        src='https://files.fullstack.edu.vn/f8-prod/banners/Banner_03_youtube.png'
        style='background-color: orange; width:1200px; height:250px'
        alt='Third slide'
      />
    </div>
  </div>
  <a
    class='carousel-control-prev'
    href='#carouselExampleIndicators'
    role='button'
    data-slide='prev'
  >
    <span class='carousel-control-prev-icon' aria-hidden='true'></span>
    <span class='sr-only'>Previous</span>
  </a>
  <a
    class='carousel-control-next'
    href='#carouselExampleIndicators'
    role='button'
    data-slide='next'
  >
    <span class='carousel-control-next-icon' aria-hidden='true'></span>
    <span class='sr-only'>Next</span>
  </a>
</div>

<div class='mt-4'>
  <div class='row'>
    {{#each course}}
      <div class='col-sm-6 col-lg-4 mb-4'>
        <div class='card card-course-item'>
          <a href="/courses/{{this.slug}}">
          <img class='card-img-top' src='{{this.image}}' alt='{{this.name}}' />
          </a>
          <div class='card-body'>
             <a href="/courses/{{this.slug}}">
            <h5 class='card-title'>{{this.name}}</h5>
            </a>
            <p class='card-text'>{{this.description}}</p>
            <a href='#' class='btn btn-primary'>Mua Khóa Học</a>
          </div>
        </div>
      </div>

    {{/each}}

  </div>
</div>